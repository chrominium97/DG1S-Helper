<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.kdev.dg1s"

    android:versionCode="15"
    android:versionName="Elderberry_0.3.1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MealPlanner"/>
        <activity
            android:name=".PostAdd"
            android:parentActivityName=".PostView"/>
        <activity android:name=".PostView"/>
        <activity
            android:name=".Settings"
            android:theme="@android:style/Theme.Light.NoTitleBar"/>
        <activity android:name="Timetable"/>
        <activity android:name=".AcademicCalendar"/>
        <activity
            android:name=".Credits"
            android:screenOrientation="portrait" />

        <receiver android:name=".widget.MealWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sikdanwidget_provider"/>
            <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
        </receiver>
    </application>

</manifest>