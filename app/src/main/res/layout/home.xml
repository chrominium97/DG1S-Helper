<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/infoScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/dayinfocontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e1f0ee">

                    <ImageView
                        android:id="@+id/dayinfoimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/dayinfoback" />

                    <TextView
                        android:id="@+id/dayinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/monday_sentence"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#444444" />

                    <TextView
                        android:id="@+id/dayinfotext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/dayinfo"
                        android:layout_below="@id/dayinfo"
                        android:text="@string/monday_t"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/weatherinfotext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/dayinfo"
                        android:layout_below="@id/dayinfoimage"
                        android:text="@string/main_dayinfo"
                        android:textColor="#666666" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/weatherinfotext"
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:padding="10dp"
                        android:weightSum="5">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/card_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/t1_icon"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/weather_sunny" />

                            <TextView
                                android:id="@+id/t1_weather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sunny"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:id="@+id/t1_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_temp"
                                android:textColor="#ffa200"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/t1_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_time_6a"
                                android:textColor="#444444"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/card_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/t2_icon"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/weather_cloudy1" />

                            <TextView
                                android:id="@+id/t2_weather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cloudy1"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:id="@+id/t2_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_temp"
                                android:textColor="#ffa200"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/t2_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_time_9a"
                                android:textColor="#444444"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/card_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/t3_icon"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/weather_cloudy2" />

                            <TextView
                                android:id="@+id/t3_weather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cloudy2"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:id="@+id/t3_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_temp"
                                android:textColor="#ffa200"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/t3_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_time_12p"
                                android:textColor="#444444"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/card_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/t4_icon"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/weather_cloudy3" />

                            <TextView
                                android:id="@+id/t4_weather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cloudy3"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:id="@+id/t4_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_temp"
                                android:textColor="#ffa200"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/t4_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_time_3p"
                                android:textColor="#444444"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/card_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/t5_icon"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/weather_rainy" />

                            <TextView
                                android:id="@+id/t5_weather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rainy"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:id="@+id/t5_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_temp"
                                android:textColor="#ffa200"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/t5_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_time_6a"
                                android:textColor="#444444"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/infoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/dayinfocontainer"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <RelativeLayout
                        android:id="@+id/gobustime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/dismissalNotice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/dismissal"
                            android:textColor="#666666"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/busTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/dismissalNotice"
                            android:layout_below="@id/dismissalNotice"
                            android:gravity="center"
                            android:text="@string/dismissal_time"
                            android:textColor="#777777"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/busComment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/dismissalNotice"
                            android:layout_below="@id/busTime"
                            android:gravity="center"
                            android:text="@string/dismissal_comment"
                            android:textColor="#777777"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/busicon" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </uk.co.senab.actionbarpulltorefresh.extras.actionbarcompat.PullToRefreshLayout>

</LinearLayout>