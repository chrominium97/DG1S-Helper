<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FD8701"
            android:padding="2dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:src="@drawable/meal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/icon"
                android:layout_toRightOf="@id/icon"
                android:text="@string/card_title_meals"
                android:textColor="@android:color/white"
                android:textSize="@dimen/abc_text_size_display_1_material" />

            <ImageView
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_width="@dimen/abc_action_button_min_width_material"
                android:layout_height="@dimen/abc_action_button_min_height_material"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/ic_autorenew_black_24dp"
                android:tint="@android:color/white" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/contents"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/header"
            android:background="@android:color/white"
            android:baselineAligned="false"
            android:divider="@drawable/divider_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle">

            <RelativeLayout
                android:id="@+id/w_breakfastcontainer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="10dp">

                <TextView
                    android:id="@+id/w_breakfasttitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/breakfast"
                    android:textColor="@color/abc_primary_text_material_light"
                    android:textSize="@dimen/abc_text_size_title_material" />

                <TextView
                    android:id="@+id/w_breakfasttv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/w_breakfasttitle"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/no_meal"
                    android:textColor="@color/abc_secondary_text_material_light"
                    android:textSize="@dimen/abc_text_size_body_1_material" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/w_lunchcontainer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="10dp">

                <TextView
                    android:id="@+id/w_lunchtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/lunch"
                    android:textColor="@color/abc_primary_text_material_light"
                    android:textSize="@dimen/abc_text_size_title_material" />

                <TextView
                    android:id="@+id/w_lunchtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/w_lunchtitle"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/no_meal"
                    android:textColor="@color/abc_secondary_text_material_light"
                    android:textSize="@dimen/abc_text_size_body_1_material" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/w_dinnercontainer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="10dp">

                <TextView
                    android:id="@+id/w_dinnertitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/dinner"
                    android:textColor="@color/abc_primary_text_material_light"
                    android:textSize="@dimen/abc_text_size_title_material" />

                <TextView
                    android:id="@+id/w_dinnertv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/w_dinnertitle"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/no_meal"
                    android:textColor="@color/abc_secondary_text_material_light"
                    android:textSize="@dimen/abc_text_size_body_1_material" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>

